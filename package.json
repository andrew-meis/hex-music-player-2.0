{
  "name": "hex-music-vite",
  "version": "1.0.0",
  "description": "Desktop music client for Plex Media Server",
  "main": "./out/main/index.js",
  "author": "Andrew Meis <github.com/andrew-ooo>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@legendapp/state": "^2.1.13",
    "@mui/joy": "^5.0.0-beta.32",
    "@react-hookz/web": "^24.0.4",
    "@synesthesia-project/precise-audio": "^0.3.1",
    "@tanstack/react-query": "^5.29.2",
    "@tanstack/react-query-devtools": "^5.24.1",
    "@zwolf/prism": "2.8.0",
    "chroma-js": "^2.4.2",
    "colorthief": "^2.4.0",
    "dexie": "^4.0.4",
    "dexie-react-hooks": "^1.1.7",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-window-state": "^5.0.3",
    "fast-sort": "^3.4.0",
    "fast-xml-parser": "^4.3.2",
    "framer-motion": "^11.0.8",
    "ky": "^1.1.3",
    "lastfm-ts-api": "^2.1.0",
    "lodash": "^4.17.21",
    "normalizr": "3.6.2",
    "overlayscrollbars": "^2.6.1",
    "overlayscrollbars-react": "^0.5.4",
    "qs": "^6.11.2",
    "react-dropzone": "^14.2.3",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.22.2",
    "react-virtuoso": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/chroma-js": "^2.4.4",
    "@types/lodash": "^4.17.0",
    "@types/node": "^18.19.9",
    "@types/qs": "^6.9.12",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-node-polyfills": "^0.21.0"
  }
}
